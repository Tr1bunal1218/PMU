<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="@dimen/gold_widget_diameter"
        android:layout_height="@dimen/gold_widget_diameter"
        android:background="@drawable/bg_gold_ball">

        <TextView
            android:id="@+id/tvGoldPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="2"
            android:padding="12dp"
            android:text="@string/gold_widget_placeholder"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>
